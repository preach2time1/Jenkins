pipeline{

    agent {
           docker {
               image 'maven'
            }
          }
      stages{

         stage('init'){
            steps{
                sh 'echo this first stage'                       
            }
        }
         stage('secondstage'){
            steps{
                sh 'mvn --version'                       
            }
        }
        stage('thirdstage'){
            steps{
                sh 'echo this 3rd stage'                       
            }
        }
    }
    post{
        always{
    cleanWs()
        }
    }
}
