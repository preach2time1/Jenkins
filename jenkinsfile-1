currentBuild.displayName = "test-ui #"+currentBuild.number


pipeline {
    
    agent {
            docker {
                image 'maven'
            }
       }
    stages {
      
        stage('init'){
           steps{
               currentBuild.description = "executed on"+ env.BRANCH_NAME
                sh 'echo this first stage'                       
            }
        }
         stage('secondstage'){
             steps{
                sh 'mvn --version'                       
            }
        }
        stage('thirdstage'){
            steps{
                sh 'echo this 3rd stage'                       
            }
        }
    }
    post{
        always{
            cleanWs()
        }
    }
}
